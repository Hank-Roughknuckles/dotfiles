  "tComment stuff
    "Press leader+c to comment instead of ctrl+_ ctrl+_
      map <leader>c <c-_><c-_>

  "ack.vim stuff
    "call Ack-grep
      nnoremap <leader>ag :Ack<space>

  "Unite stuff
    "Use fuzzy matching for Unite
	    call unite#filters#matcher_default#use(['matcher_fuzzy'])
    "Sort candidates found by length
      call unite#filters#sorter_default#use(['sorter_length'])

    "Use ag to help speed up Unite's searching
    if executable('ag')
      let g:unite_source_rec_async_command= 'ag --nocolor --nogroup --hidden -g ""' 
	    nnoremap <silent> <leader>f 
             \  :<C-u>Unite -no-split -buffer-name=files
             \ -profile-name=buffer -start-insert file_rec/async:!<cr>
    else
	    nnoremap <silent> <leader>f 
             \  :<C-u>Unite -no-split -buffer-name=files
             \ -profile-name=buffer -start-insert file_rec:!<cr>
    endif

	  if executable('ack-grep')
	    let g:unite_source_grep_command = 'ack-grep'
    endif

    "Alter keybindings that run inside of the Unite buffer
    autocmd FileType unite call s:unite_settings()
    function! s:unite_settings()
      "Ctrl-x to horiz-split with the selected unite candidate
      imap <silent><buffer><expr> <C-x> unite#do_action('below')

      "Ctrl-v to vert-split with the selected unite candidate
      imap <silent><buffer><expr> <C-v> unite#do_action('right')

      "Ctrl-t to open the selected unite candidate in a new tab
      imap <silent><buffer><expr> <C-t> unite#do_action('tabopen')
    endfunction


    "open files/buffers/bookmarks using Unite
      nnoremap <silent> <buffer> <expr> <leader>r <Plug>(unite_redraw)

      nnoremap <silent> <leader>b 
             \ :<C-u>Unite -no-split -buffer-name=files
             \ -profile-name=buffer -start-insert buffer<cr>
      nnoremap <silent> <leader>m 
             \ :<C-u>Unite -no-split -buffer-name=files
             \ -profile-name=buffer -start-insert bookmark<cr>


  "Neocomplcache stuff
    " Disable AutoComplPop.
    let g:acp_enableAtStartup = 0
    " Use neocomplcache.
    let g:neocomplcache_enable_at_startup = 1
    " Use smartcase.
    let g:neocomplcache_enable_smart_case = 1
    " Set minimum syntax keyword length.
    let g:neocomplcache_min_syntax_length = 2
    let g:neocomplcache_lock_buffer_name_pattern = '\*ku\*' 


  "Neosnippet stuff
    "use the currently selected snippet by pressing tab
    imap <expr><TAB> neosnippet#expandable_or_jumpable() ?
        \ "\<Plug>(neosnippet_expand_or_jump)"
        \: pumvisible() ? "\<C-n>" : "\<TAB>"
    smap <expr><TAB> neosnippet#expandable_or_jumpable() ?
        \ "\<Plug>(neosnippet_expand_or_jump)"
        \: "\<TAB>"


  "Smooth scroll stuff
    noremap <silent> <c-u> :call smooth_scroll#up(&scroll, 10, 1)<CR>
    noremap <silent> <c-d> :call smooth_scroll#down(&scroll, 10, 1)<CR>
    noremap <silent> <c-b> :call smooth_scroll#up(&scroll*2, 10, 2)<CR>
    noremap <silent> <c-f> :call smooth_scroll#down(&scroll*2, 10, 2)<CR>


  "Rails.vim shortcuts
    noremap <leader>rc :Econtroller<CR>
