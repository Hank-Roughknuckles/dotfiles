# Open zshrc easier
alias zshconfig="vim ~/.zshrc"

# Quicker ls
# alias ll='ls -alF'
# alias la='ls -A'
# alias l='ls -CF'
alias ll='exa -alF'
alias la='exa -A'

# Quick cd to home directory
alias ~="cd ~"

# c to cd and also show contents of new directory
c() { cd "$@" && pwd && exa -alF; }

# Rails aliases
