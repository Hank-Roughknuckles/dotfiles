[user]
  name = Thomas Morris
  email = thomas.morris@3pillarglobal.com

[alias]
  g = grep --break --heading --line-number
  s = status
  com = commit
  b = branch
  bd = branch -d
  bD = branch -D
  c = checkout
  df = diff
  r = rebase
  ri = rebase -i
  l = log 
  lp = log -p
  lg = log --graph --oneline --decorate
  today = !git log --since=midnight --author=\"$(git config user.name)\" --oneline

[color]
  status = auto
  ui = true

[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
  editor = vim

[push]
  default = current
